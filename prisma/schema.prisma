generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LicenseTier {
  FREE
  PATREON_SUPPORTER
  PATREON_PLUS
  PATREON_PRO
  PATREON_ULTIMATE
  COMMERCIAL_STARTER
  COMMERCIAL_PRO
  COMMERCIAL_ENTERPRISE
}

enum LicenseStatus {
  ACTIVE
  EXPIRED
  REVOKED
}

enum PaymentProvider {
  MANUAL
  PATREON
  STRIPE
  KOFI
}

enum WebhookEventStatus {
  PENDING
  PROCESSED
  FAILED
}

enum WebhookEventType {
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPDATED
  SUBSCRIPTION_CANCELLED
  PAYMENT_RECEIVED
}

model License {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  key       String        @unique
  email     String
  tier      LicenseTier   @default(FREE)
  status    LicenseStatus @default(ACTIVE)

  maxNodes          Int @default(1) @map("max_nodes")
  maxConcurrentJobs Int @default(2) @map("max_concurrent_jobs")

  expiresAt DateTime? @map("expires_at")

  provider           PaymentProvider @default(MANUAL)
  providerCustomerId String?         @map("provider_customer_id")
  providerEmail      String?         @map("provider_email")

  revokedAt     DateTime? @map("revoked_at")
  revokedReason String?   @map("revoked_reason")

  activations   LicenseActivation[]
  webhookEvents WebhookEvent[]

  @@index([email])
  @@index([providerCustomerId])
  @@index([status])
  @@index([createdAt])
  @@index([tier])
  @@index([status, createdAt])
  @@index([expiresAt])
  @@map("licenses")
}

model LicenseActivation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  licenseId String  @map("license_id")
  license   License @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  machineId     String    @map("machine_id")
  machineName   String?   @map("machine_name")
  ipAddress     String?   @map("ip_address")
  userAgent     String?   @map("user_agent")
  deactivatedAt DateTime? @map("deactivated_at")

  @@unique([licenseId, machineId])
  @@index([licenseId])
  @@map("license_activations")
}

model WebhookEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  provider        PaymentProvider
  providerEventId String              @map("provider_event_id")
  eventType       WebhookEventType    @map("event_type")
  status          WebhookEventStatus  @default(PENDING)
  rawPayload      Json                @map("raw_payload")
  error           String?
  processedAt     DateTime?           @map("processed_at")

  licenseId String?  @map("license_id")
  license   License? @relation(fields: [licenseId], references: [id])

  @@unique([provider, providerEventId])
  @@index([provider, status])
  @@map("webhook_events")
}

model PricingTier {
  id                   String    @id @default(cuid())
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  name                 String    @unique
  displayName          String    @map("display_name")
  description          String
  maxNodes             Int       @map("max_nodes")
  maxConcurrentJobs    Int       @map("max_concurrent_jobs")
  priceMonthly         Int       @map("price_monthly")
  priceYearly          Int?      @map("price_yearly")

  stripePriceIdMonthly String?   @map("stripe_price_id_monthly")
  stripePriceIdYearly  String?   @map("stripe_price_id_yearly")
  patreonTierId        String?   @map("patreon_tier_id")

  isActive             Boolean   @default(false) @map("is_active")
  publishedAt          DateTime? @map("published_at")
  publishedBy          String?   @map("published_by")
  createdBy            String    @map("created_by")

  @@index([isActive])
  @@map("pricing_tiers")
}

model PromoCode {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  code          String   @unique
  description   String
  discountType  String   @map("discount_type")
  discountValue Int      @map("discount_value")
  validFrom     DateTime @map("valid_from")
  validUntil    DateTime @map("valid_until")
  maxUses       Int?     @map("max_uses")
  currentUses   Int      @default(0) @map("current_uses")
  isActive      Boolean  @default(true) @map("is_active")
  createdBy     String   @map("created_by")

  @@index([code, isActive])
  @@index([validUntil])
  @@index([currentUses, maxUses])
  @@map("promo_codes")
}

model Donation {
  id                   String    @id @default(cuid())
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  email                String
  amount               Int
  provider             String
  providerEventId      String    @unique @map("provider_event_id")
  status               String
  convertedToLicenseId String?   @map("converted_to_license_id")
  processedBy          String?   @map("processed_by")
  processedAt          DateTime? @map("processed_at")
  rawPayload           Json      @map("raw_payload")

  @@index([email, status])
  @@map("donations")
}

model AppConfig {
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt @map("updated_at")

  key         String   @unique
  value       String
  displayName String   @map("display_name")
  description String?
  isSecret    Boolean  @default(false) @map("is_secret")
  updatedBy   String   @map("updated_by")

  @@index([key])
  @@map("app_config")
}

model AuditLog {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now()) @map("created_at")

  action     String
  entityType String   @map("entity_type")
  entityId   String   @map("entity_id")
  userId     String   @map("user_id")
  changes    Json?
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@map("audit_log")
}

model EmailTemplate {
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt @map("updated_at")

  key       String   @unique
  subject   String
  htmlBody  String   @map("html_body") @db.Text
  textBody  String   @map("text_body") @db.Text
  variables Json
  isActive  Boolean  @default(true) @map("is_active")
  updatedBy String   @map("updated_by")

  @@index([key])
  @@map("email_templates")
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
}

model AdminUser {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email            String    @unique
  passwordHash     String    @map("password_hash")
  name             String
  role             AdminRole @default(ADMIN)
  isActive         Boolean   @default(true) @map("is_active")
  lastLoginAt      DateTime? @map("last_login_at")
  createdBy        String?   @map("created_by")
  resetToken       String?   @map("reset_token")
  resetTokenExpiry DateTime? @map("reset_token_expiry")

  @@index([email])
  @@index([isActive])
  @@map("admin_users")
}
